<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/blood_bank_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Bank Name"
                android:textSize="20dp"
                android:layout_marginBottom="7dp"/>

            <TextView
                android:id="@+id/blood_bank_location_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Bank Location"/>

            <TextView
                android:id="@+id/blood_bank_phone_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Bank Phone"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>