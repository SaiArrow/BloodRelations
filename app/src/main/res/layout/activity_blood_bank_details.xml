<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    tools:context="smartindia.santas.bloodrelations.activities.BloodBankDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/app_padding"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blood_bank_name"
                android:textSize="30dp"
                android:paddingTop="10dp"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textSize="20dp"
                android:paddingTop="20dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/whole_blood_wb"
                    android:layout_columnSpan="8"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:background="#FFCA28"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/opositive"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="1dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onegative"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A+"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A-"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B+"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B-"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB+"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB-"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/opos"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_10"
                    android:id="@+id/oneg"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_10"
                    android:id="@+id/apos"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_10"
                    android:id="@+id/aneg"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_10"
                    android:id="@+id/bpos"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_10"
                    android:id="@+id/bneg"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_10"
                    android:id="@+id/abpos"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_10"
                    android:id="@+id/abneg"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"/>
            </GridLayout>


            <TextView
                android:id="@+id/bloodGroupTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:text="@string/blood_group"
                android:textSize="20dp" />
            <Spinner
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <android.support.design.widget.TextInputEditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="@string/quantity"
                android:id="@+id/bloodQuantity"
                android:inputType="number"
                android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/submitBloodQuantity"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:onClick="update_blood_details"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@color/colorPrimaryDark"/>
        </LinearLayout>
    </ScrollView>
</android.support.v7.widget.CardView>