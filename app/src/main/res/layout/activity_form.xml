<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smartindia.santas.bloodrelations.activities.FormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="@dimen/app_padding"
            android:layout_marginBottom="6dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:padding="3dp"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/form_header_size"
                    android:layout_height="wrap_content"
                    android:text="1. Enter Occupation"/>
                <EditText
                    android:layout_width="0dp"
                    android:id="@+id/ques1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textCapSentences"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="@dimen/app_padding"
            android:layout_marginBottom="6dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="In the past 6 months"
                    android:layout_margin="8dp"
                    android:textSize="@dimen/form_header_size"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:padding="3dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="2. Have you had a blood transfusion?"/>
                    <RadioGroup
                        android:layout_width="0dp"
                        android:id="@+id/ques2"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques2_yes"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:id="@+id/ques2_no"
                            android:layout_height="wrap_content"
                            android:text="No"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="20sp"
                        android:text="3. Have you had any vaccinations or other shots?"/>
                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:id="@+id/ques3"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques3_yes"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques3_no"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="No"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="@dimen/app_padding"
            android:layout_marginBottom="4dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Have you ever"
                    android:layout_margin="8dp"
                    android:textSize="@dimen/form_header_size"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="20sp"
                        android:text="4. Had Jaundice/Hepatitis"/>
                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:id="@+id/ques4"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques4_yes"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques4_no"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="No"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:padding="3dp"
                        android:text="5. Had a positive test for HIV/HbSAg/HCV?"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:id="@+id/ques5"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques5_yes"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques5_no"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="No"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="20sp"
                        android:text="6. Had any cardiac/lung problems?"/>
                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:id="@+id/ques6"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques6_yes"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques6_no"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="No"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="20sp"
                        android:text="7. Had a bleeding condition or blood disease?"/>
                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:id="@+id/ques7"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques7_yes"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques7_no"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="No"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:textSize="20sp"
                        android:text="8. Do you have hypertension or blood disease"/>
                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/ques8"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques8_yes"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="Yes"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/ques8_no"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:text="No"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/submit_form_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/submit_form"/>

    </LinearLayout>

</ScrollView>
